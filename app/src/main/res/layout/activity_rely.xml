<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_rely_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/et_rely_rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入自定义的item个数"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_rely_update_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新item个数"/>

    <EditText
        android:id="@+id/et_rely_rv_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入RecycleView高度"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_rely_update_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新recycleView高度并自动计算item"/>

    <EditText
        android:id="@+id/et_rely_rv_child_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入childView的统一margin"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_rely_update_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新childView的margin大小"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_rely"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff9900"/>

</LinearLayout>